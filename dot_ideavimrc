" Plugins
set sneak
set nerdtree
set textobj-indent
set highlightedyank
set surround

" Common settings
set scrolloff=3
set sidescrolloff=3
set incsearch
set ignorecase
set smartcase
set hlsearch
set number
set relativenumber
set showmode
set showcmd
set visualbell
set tm=500
set clipboard+=unnamed
set ideajoin
set ideamarks

" Common Mappings 
let mapleader = ' '
inoremap jj <Esc>
nnoremap <CR> :nohlsearch<CR>
map <a-h> <C-w>h
map <a-j> <C-w>j
map <a-k> <C-w>k
map <a-l> <C-w>l

" Idea specific mappings 
nmap <Leader>ff <Action>(GotoFile)
nmap <Leader>t <Action>(ActivateTerminalToolWindow)
nmap <Leader>z <Action>(ToggleDistractionFreeMode)
nmap [[ <Action>(MethodUp)
nmap ]] <Action>(MethodDown)
nmap <Leader>ca <Action>(ShowIntentionActions)
nmap <leader>x <Action>(CloseEditor)
nmap <leader>db <Action>(ToggleLineBreakpoint)
nmap <leader>o <Action>(FileStructurePopup)
nmap <leader>e <Action>(ShowErrorDescription)
nmap <leader>en <Action>(GotoNextError)
nmap <leader>re <Action>(RenameElement)
nmap <leader>r <Action>(Run)
nmap <leader>d <Action>(Debug)
nmap <leader>s <Action>(Stop)