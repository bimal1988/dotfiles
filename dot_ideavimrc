" Plugins
set sneak
set nerdtree
set textobj-indent
set highlightedyank
set surround
set which-key

" Common settings
set scrolloff=0
set sidescrolloff=3
set incsearch
set ignorecase
set smartcase
set hlsearch
set number
set relativenumber
set showmode
set showcmd
set visualbell
set tm=5000
set clipboard+=unnamed
set ideajoin
set ideamarks

" Common Mappings 
let mapleader = ' '
inoremap jj <Esc>
nnoremap <CR> :nohlsearch<CR>
map <a-h> <C-w>h
map <a-j> <C-w>j
map <a-k> <C-w>k
map <a-l> <C-w>l

" Idea specific mappings 
nmap <Leader>ff <Action>(GotoFile)
nmap <Leader>ft <Action>(ActivateTerminalToolWindow)
nmap <Leader>z <Action>(ToggleDistractionFreeMode)
nmap [m <Action>(MethodUp)
nmap [f <Action>(MethodUp)
nmap ]m <Action>(MethodDown)
nmap ]f <Action>(MethodDown)
nmap <Leader>ca <Action>(ShowIntentionActions)
nmap <leader>db <Action>(ToggleLineBreakpoint)
nmap <leader>o <Action>(FileStructurePopup)
nmap <leader>e <Action>(ShowErrorDescription)
nmap <leader>]e <Action>(GotoNextError)
nmap <leader>[e <Action>(GotoPreviousError)
nmap <leader>cr <Action>(RenameElement)
nmap <leader>cR <Action>(RenameFile)
nmap <leader>r <Action>(Run)
nmap <leader>d <Action>(Debug)
nmap <leader>s <Action>(Stop)

" NERDTree mappings
nmap <leader>e :NERDTreeToggle<CR>

" HarpoonIJ mappings
nmap <leader>h <Action>(ShowHarpoon)
nmap <leader>H <Action>(AddToHarpoon)
nmap <leader>1 <Action>(GotoHarpoon1)
nmap <leader>2 <Action>(GotoHarpoon2)
nmap <leader>3 <Action>(GotoHarpoon3)
nmap <leader>4 <Action>(GotoHarpoon4)
nmap <leader>5 <Action>(GotoHarpoon5)
